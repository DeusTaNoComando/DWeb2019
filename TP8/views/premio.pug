extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-red
                h3 Informação de Prémio
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Ano
                        th Categoria
                        th Laureados
                        th Operações
                    tr
                        td= p.year
                        td= p.category
                        td
                            ul
                                each l in p.laureates
                                    li= l.firstname + " " + l.surname
                        td
                            button.w3-btn(onclick="eliminar('" + p._id + "')" class='fa fa-trash')
                            button.w3-btn(onclick="window.location.assign('/premios/update/" + p._id + "')" class='fa fa-edit')

        .w3-container.w3-red
            footer.w3-container
                p
                    a(href="/") Voltar à página principal